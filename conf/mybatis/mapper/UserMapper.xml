	<!-- 通过指定 id 删除用户: public void deleteUserById(Integer id); -->
	
	<!-- 添加用户并返回其主键值: public int addUser(User user); -->
	
	<!-- 通过用户对象属性更新用户: public void updateUser(User user); -->
	
